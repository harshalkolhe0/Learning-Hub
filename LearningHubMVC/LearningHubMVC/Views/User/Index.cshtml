@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model IEnumerable<LearningHubMVC.Models.User>
@{
    ViewBag.Title = "All Users";
}


<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" rel="stylesheet"></link>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<br/>
<p>
    <a asp-action="AddCourse1">Add New User/Admin</a>
</p>

<div class="container mb-3 mt-3">
    <table class="table table-striped table-bordered" style="width:100%" id="mydatatable">
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Registered Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var course in Model)
            {
                <tr>
                    <td>@course.ID</td>
                    <td>@course.Role.ToString()</td>
                    <td>@string.Format("{0:dd/MMM/yyyy hh:mm tt}", course.registeredDate)</td>
                    <td>
                            <a asp-action="Edit" asp-route-id="@course.ID">Edit</a>
                            <span>|</span>
                            <a asp-action="Delete2" asp-route-id="@course.ID">Delete</a>            
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            
        </tfoot>
    </table> 

    
    
</div>




<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
