    <script>
        var v='@TempData["toastmsg"]';
    
        if(v != '')
        {
            addtoast(v);
        }
        function addtoast(msg)
        {
               let $k=$('<div/>');
               $k.append('<p/>').html(msg);
               $('#toastbody').empty().html($k);
               $("#liveToast").toast('show',{delay: 3000});
        }
    </script>
