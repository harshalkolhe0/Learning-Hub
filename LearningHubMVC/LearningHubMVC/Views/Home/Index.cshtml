                function FetchEventAndRenderCalendar() {
                    events = [];
                    //alert("In Event Fetching");
                    $.ajax({
                        type: "GET",
                        url: "/Courses/GetPresentCourses",
                        contentType: "JSON",
                        success: function (data) {
                            $.each(data, function (i, v) {
                                events.push({
                                    
                                    eventID: v.id,
                                    title: v.name,
                                    duration: v.duration,
                                    info: v.info,
                                    start: moment(v.startdate),
                                    end: moment(v.enddate),
                                    own: v.istrainer
                                    //color: v.ThemeColor,
                                    //allDay: v.IsFullDay
                                });
                            })
     
                            GenerateCalender(events);
                        },
                        error: function (error) {
                            alert('failed fetching');
                        }
                    })
                }
     
                function GenerateCalender(events) {
                    $('#calender').fullCalendar('destroy');
                    $('#calender').fullCalendar({
                        contentHeight: 400,
                        defaultDate: new Date(),
                        timeFormat: 'h(:mm)a',
                        header: {
                            left: 'prev,next today',
                            center: 'title',
                            right: 'month,basicWeek,basicDay,agenda'
                        },
                        eventLimit: true,
                        eventColor: '#378006',
                        events: events,
                        eventClick: function (calEvent) {
                            //alert("In Event Clicked "+calEvent.eventID+","+calEvent.title+","+calEvent.start+","+calEvent.end+","+calEvent.duration);
                            selectedEvent = calEvent;
                            
                            //var $tp=$('<div/>');
                            //$tp.append('<p/>').html(calEvent.title +","+ calEvent.start +","+ calEvent.end +","+ calEvent.duration);
                            //$('#tp').empty().html($tp);

                            
                           
                            var $description = $('<div/>');
                            $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("DD-MMM-YYYY HH:mm a")));
                            //if (calEvent.end != null) {
                            $description.append($('<p/>').html('<b>End:</b>' + calEvent.end.format("DD-MMM-YYYY HH:mm a")));
                            //}
                            $description.append($('<p/>').html('<b>Duration:</b>' + calEvent.duration));
                            $description.append($('<p/>').html('<b>Info:</b>' + calEvent.info));
                            
                            //change here
                            if(calEvent.own==true)
                            {
                                $('#myModalown #eventTitle').text(calEvent.title);
                                /*
                                var $description = $('<div/>');
                                $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("DD-MMM-YYYY HH:mm a")));
                                //if (calEvent.end != null) {
                                    $description.append($('<p/>').html('<b>End:</b>' + calEvent.end.format("DD-MMM-YYYY HH:mm a")));
                                //}
                                $description.append($('<p/>').html('<b>Duration:</b>' + calEvent.duration));
                                $description.append($('<p/>').html('<b>Info:</b>' + calEvent.info));
                                */
                                $('#myModalown #pDetails').empty().html($description);
                            
                                $('#myModalown').modal('show');
                            }
                                
                            else 
                            {
                                $('#myModal #eventTitle').text(calEvent.title);
                                $('#myModal #pDetails').empty().html($description);
                                $('#myModal').modal('show');
                            }
                        },
                        selectable: true,
                        select: function (start, end) {
                            //alert("In select event");
                            selectedEvent = {
                                eventID: 0,
                                title: '',
                                start: start,
                                end: end,
                                info :'',
                                duration: 0
                                //allDay: false,
                                //color: ''
                            };
                            openAddEditForm();
                            $('#calendar').fullCalendar('unselect');
                        },
                        editable: true,
                        eventDrop: function (event) {
                            var data = {
                                EventID: event.eventID,
                                Subject: event.title,
                                Start: event.start.format('DD/MM/YYYY HH:mm A'),
                                End: event.end.format('DD/MM/YYYY HH:mm A'),//take care of null!
                                Info: event.info,
                                Duration: event.duration
                                //ThemeColor: event.color,
                                //IsFullDay: event.allDay
                            };
                            SaveEvent(data);
                        }
                    })
                }
     
                $('#btnEdit').click(function () {
                    //Open modal dialog for edit event
                    openAddEditForm();
                })
                
                $('#btnDelete').click(function () {
                    if (selectedEvent != null && confirm('Are you sure?')) {
                        $.ajax({
                            type: "POST",
                            url: '/Courses/Delete2',//+selectedEvent.eventID,//'https://localhost:7203/api/Courses/',
                            data: {'ID': selectedEvent.eventID},
                            success: function (data) {
                                //alert(data.title);
                                if (data.status) {
                                    //Refresh the calender
                                    //FetchEventAndRenderCalendar();
                                    //$('#myModal').modal('hide');
                                }
                                addtoast("Course Deleted Succesfully");
                                FetchEventAndRenderCalendar();
                                $('#myModal').modal('hide');
                            },
                            error: function () {
                                alert('Failed delete');
                            }
                        })
                    }
                })
                $('#dtp1,#dtp2').datetimepicker({
                    format: 'DD/MM/YYYY HH:mm A'
                });
                $('#chkIsFullDay').change(function () {
                    if ($(this).is(':checked')) {
                        $('#divEndDate').hide();
                    }
                    else {
                        $('#divEndDate').show();
                    }
                });
                
                function openAddEditForm() {
                    if (selectedEvent != null) {
                        //alert("In add Edit form");
                        $('#hdEventID').val(selectedEvent.eventID);
                        $('#txtSubject').val(selectedEvent.title);
                        $('#txtStart').val(selectedEvent.start.format('DD/MM/YYYY HH:mm A'));
                        //$('#chkIsFullDay').prop("checked", selectedEvent.allDay || false);
                        //$('#chkIsFullDay').change();
                        $('#txtEnd').val(selectedEvent.end.format('DD/MM/YYYY HH:mm A'));
                        $('#txtduration').val(selectedEvent.duration);
                        $('#txtInfo').val(selectedEvent.info);//------------------------------
                        //$('#ddThemeColor').val(selectedEvent.color);
                    }
                    //else alert("Event is null");
                    $('#myModal').modal('hide');
                    $('#myModalSave').modal('show');
                }
                
                $('#btnSave').click(function () {
                    //Validation/
                    if ($('#txtSubject').val().trim() == "") {
                        alert('Subject required');
                        return;
                    }
                    if ($('#txtStart').val().trim() == "") {
                        alert('Start date required');
                        return;
                    }
                    if ($('#txtEnd').val().trim() == "") {
                        alert('End date required');
                        return;
                    }
                    if ($('#txtduration').val().trim() == "") {
                        alert('Duration required');
                        return;
                    }
                    if(isNaN($('#txtduration').val().trim()))
                    {
                        alert('Duration must be number');
                        return;
                    }
                    var startDate = moment($('#txtStart').val(), "DD/MM/YYYY HH:mm A").toDate();
                    var endDate = moment($('#txtEnd').val(), "DD/MM/YYYY HH:mm A").toDate();
                    if (startDate > endDate) {
                        alert('Invalid end date');
                        return;
                    }
                    
                    //if ($('#chkIsFullDay').is(':checked') == false && $('#txtEnd').val().trim() == "") {
                    //    alert('End date required');
                    //    return;
                    //}
                    //else {
                    //    var startDate = moment($('#txtStart').val(), "DD/MM/YYYY HH:mm A").toDate();
                    //    var endDate = moment($('#txtEnd').val(), "DD/MM/YYYY HH:mm A").toDate();
                    //    if (startDate > endDate) {
                    //        alert('Invalid end date');
                    //        return;
                    //    }
                    //}

                    //Set p=new Set();
                    //p=null;

                    var data = {
                        ID: $('#hdEventID').val(),
                        Name: $('#txtSubject').val().trim(),
                        startdate: $('#txtStart').val().trim(),
                        
                        //startdate: moment($('#txtStart').val().trim(), "DD/MM/YYYY HH:mm A").format('DD/MM/YYYY HH:mm:SS'),
                        enddate: $('#txtEnd').val().trim(),
                        duration: parseFloat($('#txtduration').val().trim()),
                        info: $('#txtInfo').val().trim(),
                        Enrollments : null 
                        //ThemeColor: $('#ddThemeColor').val(),
                        //IsFullDay: $('#chkIsFullDay').is(':checked')
                    }
                    if ($('#hdEventID').val() == 0) {
                    AddEvent(data)
                    }
                    else {
                        SaveEvent(data);
                    }
                    // call function for submit data to the server 
                })
                function AddEvent(data) {
                    //alert("In Save Event-" + data.Name);
                    //alert(data.duration+","+data.info+","+data.startdate+","+data.enddate+",");
                    console.log(data);
                    $.ajax({
                        type: "POST",
                        url: '/Courses/AddCourse2',//'https://localhost:7203/api/Courses/'+data.id+'/',
                        data: data,
                        success: function (data) {
                            //alert("Status-"+data.status);
                            if (data.status) {
                                //alert("refresh calendar");
                                //Refresh the calender
                                //FetchEventAndRenderCalendar();
                                
                            }
                            //else alert("Else part");
                            addtoast("Course Added Succesfully");
                            FetchEventAndRenderCalendar();
                            $('#myModalSave').modal('hide');
                        },
                        error: function () {
                            alert('Failed Save');
                        }
                    })
                }
                function SaveEvent(data) {
                    //alert("In Save Event-" + data.Name);
                    //alert(data.duration+","+data.info+","+data.startdate+","+data.enddate+",");
                    console.log(data);
                    $.ajax({
                        type: "POST",
                        url: '/Courses/UpdateEnd',//'https://localhost:7203/api/Courses/'+data.id+'/',
                        data: data,
                        success: function (data) {
                            //alert("Status-"+data.status);
                            if (data.status) {
                                //alert("refresh calendar");
                                //Refresh the calender
                                //FetchEventAndRenderCalendar();
                                
                            }
                            //else alert("Else part");
                            addtoast("Course Saved Succesfully");
                            FetchEventAndRenderCalendar();
                            $('#myModalSave').modal('hide');
                        },
                        error: function () {
                            alert('Failed Save');
                        }
                    })
                }
            })
        </script>
        
