        <script>
            $(document).ready(function () {
                var events = [];
                var selectedEvent = null;
                FetchEventAndRenderCalendar();
                ///Courses/GetCoursesJ
                /*
                function addtoast(msg)
                {
                    //alert("In toast");
                    let $k=$('<div/>');
                    $k.append('<p/>').html(msg);
                    $('#toastbody').empty().html($k);
